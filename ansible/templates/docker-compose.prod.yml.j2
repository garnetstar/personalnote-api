services:
  # Backend Application
  simple-go-api:
    image: docker.io/{{ docker_username }}/simple-go-api:latest
    restart: unless-stopped
    ports:
      - "8080:8080"
    environment:
      - GO_ENV=production
      - DB_HOST=mysql
      - DB_PORT=3306
      - DB_NAME=simple_go_api
      - DB_USER={{ db_user }}
      - DB_PASSWORD={{ db_password }}
      - CORS_ALLOWED_ORIGINS={{ app_url }}
      - FRONTEND_URL={{ app_url }}
      - JWT_SECRET={{ jwt_secret }}
      - GOOGLE_CLIENT_ID={{ google_client_id }}
      - GOOGLE_CLIENT_SECRET={{ google_client_secret }}
      - GOOGLE_REDIRECT_URL={{ app_url }}/api/auth/google/callback
      - GOOGLE_SERVICE_ACCOUNT_FILE=/app/keys/quickstart-1549817042430-d5f603eed637.json
      - GOOGLE_DRIVE_FOLDER_ID={{ google_drive_folder_id }}
    volumes:
      - ./keys:/app/keys:ro
    depends_on:
      mysql:
        condition: service_healthy
    networks:
      - app-network

  # Frontend Application
  reactapp:
    image: docker.io/{{ docker_username }}/simple-go-api-frontend:latest
    restart: unless-stopped
    ports:
      - "3000:3000"
    networks:
      - app-network

  # Database
  mysql:
    image: mysql:8.0
    container_name: simple-go-api-mysql-prod
    restart: unless-stopped
    environment:
      MYSQL_DATABASE: simple_go_api
      MYSQL_USER: {{ db_user }}
      MYSQL_PASSWORD: {{ db_password }}
      MYSQL_ROOT_PASSWORD: {{ db_root_password }}
    volumes:
      - mysql_prod_data:/var/lib/mysql
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost", "-u", "root", "-p{{ db_root_password }}"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 30s
    networks:
      - app-network

networks:
  app-network:
    driver: bridge

volumes:
  mysql_prod_data:
    driver: local
